<UserControl x:Class="WPFWeather.UserControls.LoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFWeather.UserControls"
			 xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid Style="{StaticResource Spinner}">
		<Viewbox Stretch="Uniform">
			<icons:PackIconUnicons Kind="Sync" Foreground="{StaticResource BrushFgIcon}" />
		</Viewbox>
	</Grid>
</UserControl>
